<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="left|top"
    tools:context="net.culiuliu.pokemondemo.MainActivity">

    <LinearLayout
        android:layout_weight="2"
        android:gravity="left"

        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/grid_fragment"
            android:name="net.culiuliu.pokemondemo.GridFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="top|center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/intro_fragment"
            android:name="net.culiuliu.pokemondemo.IntroFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>
