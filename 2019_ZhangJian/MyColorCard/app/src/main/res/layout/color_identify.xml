<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textColorDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textColorDiff" >

        <TextView
            android:id="@+id/sample01"
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:background="@color/dodgerblue"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/sample02"
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:background="@color/mediumpurple"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/sample03"
            android:layout_width="wrap_content"
            android:layout_height="80dip"
            android:layout_weight="1"
            android:background="@color/maroon"
            android:gravity="center"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:id="@+id/viewPickedColor"
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/gold" />

    <TextView
        android:id="@+id/textColorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewPickedColor"
        android:text="TextView" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textColorInfo"
        android:background="@color/darkgrey" />

    <View
        android:id="@+id/viewPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCamera"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:background="@drawable/android" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="拍照" />

</RelativeLayout>