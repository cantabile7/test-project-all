<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textColorDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="请输入颜色名称：" />

    <EditText
        android:id="@+id/editColorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textColorDiff"
        android:layout_toLeftOf="@+id/btnCamera"
        android:ems="10"
        android:hint="紫  或  紫色" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editColorName"
        android:layout_alignParentRight="true"
        android:text="检索" />

    <View
        android:id="@+id/viewPickedColor"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editColorName"
        android:background="@color/darkgrey" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewPickedColor" >

        <TableLayout
            android:id="@+id/resultTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dip"
            android:shrinkColumns="0"
            android:stretchColumns="0" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dip" >

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:background="@color/purple" />

                <TextView
                    android:id="@+id/sample01"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:gravity="center"
                    android:text="紫色" />

            </TableRow>
        </TableLayout>

    </ScrollView>

</RelativeLayout>